<Window x:Class="Mooseware.DvarDeputy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ctrl="clr-namespace:Mooseware.DvarDeputy.Controls"
        xmlns:local="clr-namespace:Mooseware.DvarDeputy"
        mc:Ignorable="d"
        Title="D'var Deputy"
        Height="400"
        Width="630"
        MinHeight="400"
        MinWidth="630"
        Background="{StaticResource DarkBackgroundBrush}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Background="{StaticResource DarkBackgroundBrush}">
        <TextBlock x:Name="LowerRightCornerStatusMessages"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Foreground="{StaticResource StatusMessageForegroundBrush}"
                   Margin="0 0 14 6"
                   Text="[TMP: Status messages go here.]" />
        <TabControl x:Name="TabList"
                    TabStripPlacement="Bottom"
                    Margin="0 0 0 0">
            <TabItem x:Name="PromptingTabItem"
                     Header="Prompter">
                <Grid x:Name="OuterGrid"
                      Margin="4 4 4 4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="ContentFileGrid"
                          Grid.Row="0"
                          Grid.Column="0"
                          AllowDrop="True"
                          DragOver="ContentFileGrid_DragOver"
                          Drop="ContentFileGrid_Drop">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="Content File"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0 2 0 0" />
                        <TextBox x:Name="ContentFilespecTextBox"
                                 Grid.Row="0"
                                 Grid.Column="1"
                                 Height="22"
                                 HorizontalAlignment="Stretch"
                                 IsReadOnly="True"
                                 IsEnabled="False"
                                 Margin="8 0 4 0" />
                        <Button x:Name="OpenWordDocumentButton"
                                Grid.Row="0"
                                Grid.Column="2"
                                Width="36"
                                Height="36"
                                Margin="4 0 4 0"
                                Click="OpenWordDocumentButton_Click">
                            <Image Source="/Resources/Open-File-Button-Icon.png" />
                        </Button>
                    </Grid>
                    <GroupBox x:Name="PrompterGroupBox"
                              Header="Prompting Settings"
                              Grid.Column="0"
                              Grid.Row="1">
                        <Grid x:Name="PrompterSettingsGrid"
                              Margin="0 8 0 8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Content="Font Family"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Margin="0 0 12 0" />
                            <ComboBox x:Name="FontFamilyComboBox"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Grid.ColumnSpan="2"
                                      Width="250"
                                      HorizontalAlignment="Left"
                                      SelectionChanged="FontFamilyComboBox_SelectionChanged" />
                            <Label Content="Font Size"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   Margin="0 0 8 0"
                                   VerticalAlignment="Center" />
                            <TextBlock x:Name="FontSizeTextBlock"
                                       Grid.Row="2"
                                       Grid.Column="1"
                                       Margin="0 5 0 0"
                                       Width="60" />
                            <Slider x:Name="FontSizeSlider"
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="0 4 0 0"
                                    TickPlacement="None"
                                    Minimum="1"
                                    Maximum="100"
                                    Value="50"
                                    ValueChanged="FontSizeSlider_ValueChanged" />
                            <Button x:Name="FontSizeResetButton"
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Height="24"
                                    Width="24"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    Click="FontSizeResetButton_Click"
                                    ToolTip="Reset to default">
                                <Image Source="/Resources/Reset-Button-Icon-40x40.png" />
                            </Button>
                            <Label Content="Side Margin"
                                   Grid.Row="4"
                                   Grid.Column="0"
                                   Margin="0 0 8 0"
                                   VerticalAlignment="Center" />
                            <TextBlock x:Name="SideMarginTextBlock"
                                       Grid.Row="4"
                                       Grid.Column="1"
                                       Margin="0 5 0 0"
                                       Width="60" />
                            <Slider x:Name="SideMarginSlider"
                                    Grid.Row="4"
                                    Grid.Column="2"
                                    Margin="0 4 0 0"
                                    TickPlacement="None"
                                    Minimum="1"
                                    Maximum="100"
                                    Value="50"
                                    ValueChanged="SideMarginSlider_ValueChanged" />
                            <Button x:Name="SideMarginResetButton"
                                    Grid.Row="4"
                                    Grid.Column="3"
                                    Height="24"
                                    Width="24"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    Click="SideMarginResetButton_Click"
                                    ToolTip="Reset to default">
                                <Image Source="/Resources/Reset-Button-Icon-40x40.png" />
                            </Button>
                            <Label Content="Line Spacing"
                                   Grid.Row="6"
                                   Grid.Column="0"
                                   Margin="0 0 8 0"
                                   VerticalAlignment="Center" />
                            <TextBlock x:Name="LineSpacingTextBlock"
                                       Grid.Row="6"
                                       Grid.Column="1"
                                       Margin="0 5 0 0"
                                       Width="60" />
                            <Slider x:Name="LineSpacingSlider"
                                    Grid.Row="6"
                                    Grid.Column="2"
                                    Margin="0 4 0 0"
                                    TickPlacement="None"
                                    Minimum="1"
                                    Maximum="100"
                                    Value="50"
                                    ValueChanged="LineSpacingSlider_ValueChanged" />
                            <Button x:Name="LineSpacingResetButton"
                                    Grid.Row="6"
                                    Grid.Column="3"
                                    Height="24"
                                    Width="24"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    Click="LineSpacingResetButton_Click"
                                    ToolTip="Reset to default">
                                <Image Source="/Resources/Reset-Button-Icon-40x40.png" />
                            </Button>
                            <Label Content="Scroll Speed"
                                   Grid.Row="8"
                                   Grid.Column="0"
                                   Margin="0 0 8 0"
                                   VerticalAlignment="Center" />
                            <TextBlock x:Name="ScrollSpeedTextBlock"
                                       Grid.Row="8"
                                       Grid.Column="1"
                                       Margin="0 5 0 0"
                                       Width="60" />
                            <Slider x:Name="ScrollSpeedSlider"
                                    Grid.Row="8"
                                    Grid.Column="2"
                                    Margin="0 4 0 0"
                                    TickPlacement="None"
                                    Minimum="1"
                                    Maximum="100"
                                    Value="50"
                                    ValueChanged="ScrollSpeedSlider_ValueChanged" />
                            <Button x:Name="ScrollSpeedResetButton"
                                    Grid.Row="8"
                                    Grid.Column="3"
                                    Height="24"
                                    Width="24"
                                    BorderBrush="Transparent"
                                    Background="Transparent"
                                    Click="ScrollSpeedResetButton_Click"
                                    ToolTip="Reset to default">
                                <Image Source="/Resources/Reset-Button-Icon-40x40.png" />
                            </Button>
                        </Grid>
                    </GroupBox>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                Grid.Column="0">
                        <Button x:Name="PageBackButton"
                                Margin="0,8,8,0"
                                FontFamily="Segue"
                                FontSize="16"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Width="80"
                                Height="80"
                                Style="{StaticResource RunButtonStyle}"
                                Click="PageBackButton_Click">
                            <TextBlock TextAlignment="Center"
                                       Text="Page&#xa;Back" />
                        </Button>
                        <Button x:Name="ScrollBackButton"
                                Margin="0,8,8,0"
                                FontFamily="Segue"
                                FontSize="16"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="80"
                                Height="80"
                                Click="ScrollBackButton_Click"
                                Style="{StaticResource RunButtonStyle}">
                            <TextBlock TextAlignment="Center"
                                       Text="Scroll&#xa;Back" />
                        </Button>
                        <Button x:Name="StopScrollingButton"
                                Margin="0,8,8,0"
                                FontFamily="Segue"
                                FontSize="16"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="80"
                                Height="80"
                                Style="{StaticResource RunButtonStyle}"
                                Click="StopScrollingButton_Click">
                            <TextBlock TextAlignment="Center"
                                       Text="Stop&#xa;Scroll" />
                        </Button>
                        <Button x:Name="StartScrollingButton"
                                Margin="0,8,8,0"
                                FontFamily="Segue"
                                FontSize="16"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="80"
                                Height="80"
                                Style="{StaticResource RunButtonStyle}"
                                Click="StartScrollingButton_Click">
                            <TextBlock TextAlignment="Center"
                                       Text="Scroll&#xa;Forward" />
                        </Button>
                        <Button x:Name="PageForwardButton"
                                Margin="0,8,8,0"
                                FontFamily="Segue"
                                FontSize="16"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Width="80"
                                Height="80"
                                Style="{StaticResource RunButtonStyle}"
                                Click="PageForwardButton_Click">
                            <TextBlock TextAlignment="Center"
                                       Text="Page&#xa;Forward" />
                        </Button>
                        <GroupBox Header="Viewer"
                                  DockPanel.Dock="Right">
                            <StackPanel Orientation="Vertical">
                                <RadioButton x:Name="RestoreViewerRadioButton"
                                             GroupName="ViewerViewMode"
                                             Margin="4 4 8 0"
                                             IsChecked="True"
                                             Content="Restored"
                                             Checked="ViewerViewModeOption_Click" />
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton x:Name="MaximizeViewerRadioButton"
                                                 GroupName="ViewerViewMode"
                                                 Margin="4 4 8 0"
                                                 Content="Maximized"
                                                 Checked="ViewerViewModeOption_Click" />
                                    <CheckBox x:Name="ViewerShownCheckBox"
                                              Content="Shown"
                                              Margin="4 4 4 0"
                                              IsChecked="{x:Null}"
                                              IsEnabled="False" 
                                              Click="ViewerShownCheckBox_Click"
                                              Checked="ViewerShownCheckBox_Checked"/>
                                </StackPanel>
                                <RadioButton x:Name="MinimizeViewerRadioButton"
                                             GroupName="ViewerViewMode"
                                             Margin="4 4 8 2"
                                             Content="Hidden"
                                             Checked="ViewerViewModeOption_Click" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <ScrollViewer x:Name="DevOnlyOutputScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  Visibility="Collapsed"
                                  Grid.Column="0"
                                  Grid.Row="3">
                        <TextBlock x:Name="DevOnlyOutputTextBlock"
                                   Width="Auto"
                                   Height="Auto" />
                    </ScrollViewer>

                </Grid>
            </TabItem>
            <TabItem x:Name="OptionsTabItem"
                     Header="Options">
                <Grid x:Name="OptionsTabContainerGrid"
                      Margin="8 8 8 8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Start Up Options"
                              Grid.Row="0"
                              Grid.Column="0">
                        <Grid x:Name="StartupOptionsGrid"
                              Margin="8 8 8 8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="RestoreWindowLocationsCheckbox"
                                      Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0 0 0 12"
                                      Content="Restore Window Locations on Startup"
                                      Checked="RestoreWindowLocationsCheckbox_Checked"
                                      Unchecked="RestoreWindowLocationsCheckbox_Checked" />
                            <CheckBox x:Name="ReopenLastContentCheckbox"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0 0 0 0"
                                      Content="Reopen Last Content File on Startup"
                                      Checked="ReopenLastContentCheckbox_Checked"
                                      Unchecked="ReopenLastContentCheckbox_Checked" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Viewer Options"
                              Grid.Row="1"
                              Grid.Column="0">
                        <Grid x:Name="ViewerOptionsGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <GroupBox Header="Theme"
                                      Margin="2 2 2 2"
                                      MinWidth="110">
                                <StackPanel Orientation="Vertical"
                                            Margin="4 4 4 4">
                                    <RadioButton x:Name="ThemeLightRadioButton"
                                                 GroupName="ThemeRadioButtonGroup"
                                                 Content="Light"
                                                 Margin="4 4 4 4"
                                                 IsChecked="True"
                                                 Click="ThemeRadioButton_Click" />
                                    <RadioButton x:Name="ThemeDarkRadioButton"
                                                 GroupName="ThemeRadioButtonGroup"
                                                 Content="Dark"
                                                 Margin="4 4 4 4"
                                                 Click="ThemeRadioButton_Click" />
                                    <RadioButton x:Name="ThemeMatrixRadioButton"
                                                 GroupName="ThemeRadioButtonGroup"
                                                 Content="Matrix"
                                                 Margin="4 4 4 4"
                                                 Visibility="Visible"
                                                 Click="ThemeRadioButton_Click" />
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Progress Bug"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="2 2 2 2"
                                      MinWidth="110">
                                <StackPanel Orientation="Vertical"
                                            Margin="4 4 4 4">
                                    <RadioButton x:Name="ProgressBugNoneRadioButton"
                                                 GroupName="ProgressBugRadioButtonGroup"
                                                 Content="None"
                                                 Margin="4 4 4 4"
                                                 IsChecked="True"
                                                 Click="ProgressBugRadioButton_Click" />
                                    <RadioButton x:Name="ProgressBugSideRadioButton"
                                                 GroupName="ProgressBugRadioButtonGroup"
                                                 Content="Right Side"
                                                 Margin="4 4 4 4"
                                                 Click="ProgressBugRadioButton_Click" />
                                    <RadioButton x:Name="ProgressBugBottomRadioButton"
                                                 GroupName="ProgressBugRadioButtonGroup"
                                                 Content="Bottom"
                                                 Margin="4 4 4 4"
                                                 Click="ProgressBugRadioButton_Click" />
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Display Location"
                                      Grid.Row="0"
                                      Grid.Column="2"
                                      Margin="2 2 2 2">
                                <StackPanel Orientation="Vertical"
                                            Margin="4 4 4 4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0"
                                               Grid.Column="0"
                                               Margin="0 0 8 0"
                                               Content="ATEM IP Address" />
                                        <StackPanel Grid.Row="0"
                                                    Grid.Column="1"
                                                    Orientation="Horizontal">
                                            <TextBox x:Name="AtemIpAddressTextBox"
                                                     Width="120"
                                                     MaxHeight="21"
                                                     Margin="0,2,0,2"
                                                     HorizontalAlignment="Left"
                                                     TextAlignment="Left"/>
                                            <ctrl:LightEmittingDiode x:Name="AtemApiStatusLed"
                                                                     Width="17"
                                                                     Height="17"
                                                                     Margin="6,0,0,0"
                                                                     SelectedColour="White"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"
                                                                     BorderThickness="2"
                                                                     IsOn="False"/>
                                            <Button x:Name="AtemConnectButton"
                                                    Width="21"
                                                    Height="21"
                                                    Margin="8 0 0 0 "
                                                    ToolTip="Connect"
                                                    Click="AtemConnectButton_Click">
                                                <Image Source="/Resources/DvarDeputyBookmarkIcon.png" />
                                            </Button>
                                        </StackPanel>
                                        <Label Grid.Row="1"
                                               Grid.Column="0"
                                               Margin="0 0 8 0"
                                               Content="Viewer Input" />
                                        <ComboBox x:Name="AtemInputsComboBox"
                                                  Grid.Row="1"
                                                  Grid.Column="1"
                                                  Width="95"
                                                  MaxHeight="23"
                                                  Margin="0 2 0 0"
                                                  HorizontalAlignment="Left"
                                                  SelectionChanged="AtemInputsComboBox_SelectionChanged"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                    <StackPanel x:Name="VersionInfoStackPanel"
                                Orientation="Horizontal"
                                Grid.Row="3"
                                Grid.Column="0">
                        <Label x:Name="AppVersionInfoLabel"
                               Content="Application Version Goes Here" />
                        <Label x:Name="CopyrightInfoLabel"
                               Content="Copyright Info Goes Here" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
